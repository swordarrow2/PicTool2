<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ran="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/vits_mainButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/generate_voice" />
        </LinearLayout>

        <com.meng.mediatool.tools.MaterialDesign.MDEditText
            android:id="@+id/vits_mainMDEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ran:default_value="164"
            ran:hint="@string/input_model_id" />

        <com.meng.mediatool.tools.MaterialDesign.MDEditText
            android:id="@+id/vits_mainMDEditTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ran:default_value="测试"
            ran:hint="@string/contents" />
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/vits_mainTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>

    </LinearLayout>
</RelativeLayout>

