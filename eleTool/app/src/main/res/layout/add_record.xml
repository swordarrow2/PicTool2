<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="元件编号"
			android:layout_weight="1.5"
			android:layout_gravity="center"
			android:gravity="center"/>

		<EditText
			android:id="@+id/add_recordEditText_model_id"	android:layout_width="0dp"
			android:completionThreshold="1"
			android:layout_height="wrap_content"
			android:layout_weight="5"
			android:lines="1"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:layout_width="0dp"
            android:id="@+id/add_recordButton_select"
			android:text="选择"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="数量"
			android:layout_weight="1.0"
			android:layout_gravity="center"
			android:gravity="center"/>

		<EditText
			android:layout_width="0dp"
			android:id="@+id/add_recordEditText_count"
			android:layout_height="wrap_content"
			android:layout_weight="5"/>

	</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="日期"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:inputType="date"
            android:id="@+id/add_recordEditText_date"          android:layout_height="wrap_content"
            android:layout_weight="5"/>

	</LinearLayout>
	<RadioGroup
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<RadioButton
			android:id="@+id/add_recordRadioButton_in"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="入库"/>

		<RadioButton
			android:id="@+id/add_recordRadioButton_out"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="出库"
			android:layout_marginLeft="18dp"/>

	</RadioGroup>

	<LinearLayout
		android:visibility="gone"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="时间"
			android:layout_weight="1.0"
			android:layout_gravity="center"
			android:gravity="center"/>

		<EditText
			android:layout_width="0dp"
			android:id="@+id/add_recordEditText_time"
			android:layout_height="wrap_content"
			android:layout_weight="5"/>

	</LinearLayout>

	<LinearLayout
		android:visibility="gone"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="备注"
			android:layout_weight="1.0"
			android:layout_gravity="center"
			android:gravity="center"/>

		<EditText
			android:layout_width="0dp"
			android:id="@+id/add_recordEditText_note"
			android:layout_height="wrap_content"
			android:layout_weight="5"/>

	</LinearLayout>

	<Button
		android:id="@+id/add_recordButton_ok"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="确定"/>

</LinearLayout>

