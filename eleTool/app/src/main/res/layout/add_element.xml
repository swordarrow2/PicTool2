<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="型号"
			android:layout_weight="1.0"
			android:layout_gravity="center"
			android:gravity="center"/>

		<EditText
			android:id="@+id/add_elementEditText_model"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="5"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="丝印"
			android:layout_weight="1.0"
			android:layout_gravity="center"
			android:gravity="center"/>

		<EditText
			android:layout_width="0dp"
			android:id="@+id/add_elementEditText_print"
			android:layout_height="wrap_content"
			android:layout_weight="5"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="封装"
			android:layout_weight="1.0"
			android:layout_gravity="center"
			android:gravity="center"/>

		<AutoCompleteTextView
            android:completionThreshold="1"
			android:layout_width="0dp"
			android:id="@+id/add_elementEditText_package"
			android:layout_height="wrap_content"
			android:layout_weight="5"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="分类"
			android:layout_weight="1.0"
			android:layout_gravity="center"
			android:gravity="center"/>

		<AutoCompleteTextView
			android:layout_width="0dp"
			android:id="@+id/add_elementEditText_type"
			android:layout_height="wrap_content"
			android:layout_weight="5"/>

	</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="来源"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            android:gravity="center"/>

        <AutoCompleteTextView
            android:layout_width="0dp"
            android:id="@+id/add_elementEditText_from"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>

	</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="备注"
			android:layout_weight="1.0"
			android:layout_gravity="center"
			android:gravity="center"/>

		<EditText
			android:id="@+id/add_elementEditText_note"
			android:lines="8"
			android:layout_width="0dp"
			android:layout_height="300sp"
			android:layout_weight="5"/>

	</LinearLayout>

	<Button
		android:id="@+id/add_elementButton_ok"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="确定"/>

</LinearLayout>

